{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@todome/ui": [
        "../../packages/ui/src"
      ],
      "@todome/db": [
        "../../packages/db/src"
      ],
      "@todome/store": [
        "../../packages/store/src"
      ],
      "@todome/hooks": [
        "../../packages/hooks/src"
      ]
    },
    "noEmit": true
  },
  "include": [
    "*.mjs",
    "*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
